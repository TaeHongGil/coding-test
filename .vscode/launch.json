{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run Current File in Terminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start"
            ],
            "env": {
                "FILE": "${relativeFile}"
            },
            "outputCapture": "std",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}